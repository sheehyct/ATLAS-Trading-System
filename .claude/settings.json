{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3.12 \"C:/Strat_Trading_Bot/vectorbt-workspace/.claude/hooks/strat_code_guardian.py\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3.12 \"C:/Strat_Trading_Bot/vectorbt-workspace/.claude/hooks/vbt_workflow_guardian.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3.12 -c \"import sys,os,subprocess;f=os.environ.get('CLAUDE_FILE_PATH','');sys.exit(0) if not f.endswith('.py') else sys.exit(subprocess.run(['python3.12','-m','mypy','--check-untyped-defs',f]).returncode)\"",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3.12 \"C:/Strat_Trading_Bot/vectorbt-workspace/.claude/hooks/strat_prompt_validator.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
